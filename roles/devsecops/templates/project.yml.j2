{% for username in workshop_users|json_query("[].username") %}
{% for project in projects %}
- apiVersion: project.openshift.io/v1
  kind: Project
  metadata:
    name: '{{ username }}-{{ project.name }}'
    labels:
      name: '{{ username }}-{{ project.name }}'
      environment: '{{ project.env|default(omit) }}'
      for-user: '{{ username }}'
    annotations:
      openshift.io/display-name: '{{ username|capitalize }} {{ project.disp }}'
      demo: openshift-cd-{{ username }}

- apiVersion: rbac.authorization.k8s.io/v1
  kind: RoleBinding
  metadata:
    name: '{{ username }}-{{ project.name }}-admin'
    namespace: '{{ username }}-{{ project.name }}'
  roleRef:
    apiGroup: rbac.authorization.k8s.io
    kind: ClusterRole
    name: admin
  subjects:
  - apiGroup: rbac.authorization.k8s.io
    kind: User
    name: '{{ username }}'

{% if project.env is defined %}
- apiVersion: rbac.authorization.k8s.io/v1
  kind: RoleBinding
  metadata:
    name: '{{ username }}-{{ project.name }}-cicd-edit'
    namespace: '{{ username }}-{{ project.name }}'
  roleRef:
    apiGroup: rbac.authorization.k8s.io
    kind: ClusterRole
    name: edit
  subjects:
  - apiGroup: rbac.authorization.k8s.io
    kind: Group
    name: system:serviceaccounts:{{ username }}-cicd
{% endif %}
{% endfor %}
{% endfor %}

- apiVersion: v1
  kind: Namespace
  metadata:
    name: 'devsecops'
    annotations:
      openshift.io/display-name: 'DevSecOps Common Resources'
  spec: {}

- kind: Group
  apiVersion: user.openshift.io/v1
  metadata:
    name: devsecops-project-users
    namespace: devsecops
  users:
  {% for username in workshop_users|json_query("[].username") %}
    - "{{username}}"
  {% endfor %}

- kind: RoleBinding
  apiVersion: rbac.authorization.k8s.io/v1
  metadata:
    name: devsecops-project-viewers
    namespace: devsecops
  subjects:
    - kind: Group
      apiGroup: rbac.authorization.k8s.io
      name: devsecops-project-users
  roleRef:
    apiGroup: rbac.authorization.k8s.io
    kind: ClusterRole
    name: view