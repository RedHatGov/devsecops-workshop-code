{% for project in projects %}
- apiVersion: rbac.authorization.k8s.io/v1
  kind: RoleBinding
  metadata:
    name: '{{ username }}-{{ project.name }}-admin'
    namespace: '{{ username }}-{{ project.name }}'
  roleRef:
    apiGroup: rbac.authorization.k8s.io
    kind: ClusterRole
    name: admin
  subjects:
  - apiGroup: rbac.authorization.k8s.io
    kind: User
    name: '{{ username }}'
{% endfor %}
